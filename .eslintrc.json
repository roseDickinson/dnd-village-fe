{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "parser": "@babel/eslint-parser"
  },
  "extends": [
    "@nuxtjs",
    "eslint:recommended",
    "plugin:vue/recommended",
    "plugin:prettier/recommended",
    "eslint-config-prettier",
    "prettier"
  ],
  "plugins": [
    "vue"
  ],
  "ignorePatterns": [
    "node_modules/"
  ],
  // add your custom rules here
  "rules": {
    "arrow-parens": [
      0,
      "as-needed"
    ],
    "no-console": 0,
    "sort-imports": [
      1,
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": false,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": [
          "none",
          "all",
          "multiple",
          "single"
        ]
      }
    ],
    "vue/script-indent": [
      "error",
      2,
      {
        "baseIndent": 0,
        "switchCase": 0,
        "ignores": []
      }
    ],
    "import/order": "off"
  }
}